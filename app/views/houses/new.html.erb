<!-- app/views/houses/new.html.erb -->
<% content_for :head do %>
  <title>Homie | Create House</title>
<% end %>
<h1 class="logo-name text-center">Homie</h1>
<div class="middle-box text-center loginscreen   animated fadeInDown">
  <div>
    <div>
    </div>
    <div class="col-md-6">
      <h3>Create a House</h3>
      <p>Create a house to start keeping track of expenses.</p>
      <%= form_for :house, url: '/houses',  html: { class: "m-t", "data-parsley-validate" => '' } do |f| %>
        <div class="form-group">
          <%= f.text_field :name, {class: "form-control", placeholder: "Name/Address", :required => ''} %>
        </div>
        <button type="submit" class="btn btn-primary block full-width m-b">Submit</button>
      <% end %>
    </div>

    <div class="col-md-6">
      <h3>Join a House</h3>
      <p>Join a house with an invite code.</p>
      <%= form_tag join_house_path, :id => "join_house_form", :class=>"form-horizontal" do %>
        <div class="input-group">
          <input class="form-control" placeholder="Invite Code" required="required" type="text" name="house[invite_code]" id="house_invite_code">
        </div>
        <button type="submit" class="btn btn-primary block full-width m-b">Submit</button>
      <% end %>
    </div>

    <div class="col-md-12">
      <p class="m-t"> <small>Homie 2016. Made with â™¥ by Giorgia and Eric</small> </p>
    </div>
  </div>
</div>
