<!-- app/views/expenses/show.html.erb -->
<h4> <%= @expense.name %> </h4>

  <div class="form-group">
   <div class="col-sm-2 control-label">
     <label for="name">Name</label>
   </div>
   <div class="col-sm-10" style='margin-bottom:25px;'>
     <div class="input-group">
       <input readonly id="name" value="<%= @expense.name %>" type="text" name="expense[name]" style="max-width:350px;"class="form-control" >
     </div>
   </div>
 </div>
 
  <div class="form-group">
   <div class="col-sm-2 control-label">
     <label for="amount">Amount</label>
   </div>
   <div class="col-sm-10" style='margin-bottom:25px;'>
     <div class="input-group">
       <input readonly id="amount" value="<%= @expense.amount %>" type="text" name="expense[amount]" style="max-width:350px;"class="form-control">
     </div>
   </div>
 </div>
 
  <div class="form-group">
   <div class="col-sm-2 control-label">
     <label for="date">Date</label>
   </div>
   <div class="col-sm-10" style='margin-bottom:25px;'>
     <div class="input-group">
       <input readonly id="date" value="<%= @expense.date %>" type="text" name="expense[date]" style="max-width:350px;"class="form-control">
     </div>
   </div>
 </div>
 
  <div class="form-group">
   <div class="col-sm-2 control-label">
     <label for="category">Category</label>
   </div>
   <div class="col-sm-10" style='margin-bottom:25px;'>
     <div class="input-group">
       <input readonly id="category" value="<%= @expense.category %>" type="text" name="expense[category]" style="max-width:350px;"class="form-control">
     </div>
   </div>
 </div>
 
  <div class="form-group">
   <div class="col-sm-2 control-label">
     <label for="details">Details</label>
   </div>
   <div class="col-sm-10" style='margin-bottom:25px;'>
     <div class="input-group">
       <input readonly id="details" value="<%= @expense.details %>" type="text" name="expense[details]" style="max-width:350px;"class="form-control">
     </div>
   </div>
 </div>
 
<button type="button" class="btn btn-small pull-right ">
  <%= link_to 'Edit', edit_expense_path(@expense) %>
</button> 

<button type="button" class="btn btn-small pull-right ">
  <%= link_to 'Delete', expense_path(@expense), :method => "delete" %>
</button> 
  
<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Completed</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @expense.charges.each do |charge| %>
      <tr>
        <td><%= charge.charged_to.full_name if charge.charged_to %></td>
        <td>$<%= charge.amount %></td>
        <td>
          <% if charge.completed %>
            <span class="glyphicon glyphicon-ok"></span>
          <% else %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
        <td>
          <button type="button" class="btn btn-small pull-right ">
            <%= link_to 'Mark As Completed', mark_completed_path(charge.id) %>
          </button> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>  
