<!-- app/views/sessions/new.html.erb -->

<div class="container">
  <div class="row" style="padding-top=30px;">
  	<div class="col-md-6 col-md-offset-3">
  		<div class="panel panel-default">
		  	<div class="panel-heading">
		    	<h3 style="text-align:center;">Please sign in</h3>
		 	  </div>
	  	  <div class="panel-body">
	    	  <%= form_tag '/login',{:class => 'form col-md-12 center-block'} do %>
            <div class="form-group">
              <%= text_field_tag :email, "", {class: "form-control input-lg", placeholder: "Email"} %> 
            </div>
            <div class="form-group">
              <%= password_field_tag :password,"", {class: "form-control input-lg", placeholder: "Password"} %>
            </div>
            <div class="form-group">
              <%= submit_tag "Log In", class: "btn btn-theme btn-lg btn-block" %>
            </div>
          <% end %>
		    </div>
		  </div>
	  </div>
  </div>
</div>
