<p id="notice">
  <%= notice %>
</p>
<div class="wrapper wrapper-content">
  <div class="row animated fadeInRight">
    <div class="col-md-4">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Profile Detail</h5>
        </div>
        <div>
          <!--<div class="ibox-content no-padding border-left-right text-center">-->
          <!--</div>-->
          <div class="ibox-content profile-content">
            <div class="row">
              <div class="col-md-6">
                <img alt="image" class="img-responsive img-circle" src="<%= @user.avatar.url(:thumb) %>">
                <% if @user==current_user %>
                  <%= form_for(@user, multipart: true) do |f| %>
                    <%= f.file_field :avatar, :class => "btn-info", :data => {"filename-placement" => "inside"} %>
                    <%= f.submit 'Upload Picture' %>
                  <% end %>
                <% end %>
              </div>
              <div class="col-md-6">
                <h4><strong><%= @user.full_name %> </strong></h4>
                <p><i class="fa fa-home"></i>
                  <%= @user.house.name if @user.house%>
                </p>
                <h5> About me </h5>
              </div>
            </div>
            <p>
              Lorem ipsum dolor sit amet, consectetur adipisicing e
            </p>
            <div class="user-button">
              <div class="row">
                <div class="col-md-6">
                  <button type="button" class="btn btn-primary btn-sm btn-block">
                    <i class="fa fa-envelope"></i> Send Message
                  </button>
                </div>
                <div class="col-md-6">
                  <button type="button" class="btn btn-default btn-sm btn-block">
                    <i class="fa fa-coffee"></i> Buy a coffee
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Activites</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <div>
            <div class="feed-activity-list">
              <% for activity in @user.all_activities %>
                <% if activity['type'] == 'expense' %>
                  <div class="feed-element">
                    <a href="#" class="pull-left">
                      <img alt="image" class="img-circle" src="<%= @user.avatar.url %>">
                    </a>
                    <div class="media-body ">
                      <small class="pull-right text-navy"><%= activity['expense'].date_formatted %></small>
                      <strong class="text-navy">You</strong> created the expense <strong> <%= activity['expense'].name %>  </strong> with a total cost of <%= activity['expense'].amount_formatted %>. <br>
                    </div>
                  </div>
                <% else %>
                  <div class="feed-element">
                    <a href="#" class="pull-left">
                      <img alt="image" class="img-circle" src="<%= activity['creator'].avatar.url %>">
                    </a>
                    <div class="media-body ">
                      <small class="pull-right text-navy"><%= activity['date_formatted'] %></small>
                      <strong><%= activity['creator'].full_name %></strong> charged <strong  class="text-navy">you</strong> <%=activity['amount']%> for <%=activity['reason']%>. <br>
                      <!--<small class="text-muted"></small>-->

                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
            <!--<button class="btn btn-primary btn-block m"><i class="fa fa-arrow-down"></i> Show More</button>-->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
<script>
  $(document).ready(function() {
    $('input[type=file]').bootstrapFileInput();

  })
</script>
